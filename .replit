modules = ["nodejs-20", "web"]
run = "npm run dev"

[agent]
expertMode = true
integrations = ["javascript_mem_db:1.0.0", "javascript_supabase:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg", "python3", "yt-dlp", "libreoffice", "supabase-cli"]

[workflows]
runButton = "Development Server"

[[workflows.workflow]]
name = "Development Server"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Build Project"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
publicDir = "dist"
run = ["npx", "serve", "-s", "dist", "-l", "5000"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 33623
externalPort = 3000
