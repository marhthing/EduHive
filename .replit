modules = ["nodejs-20", "web"]
run = "npm run dev"

[agent]
expertMode = true
integrations = ["javascript_mem_db:1.0.0", "javascript_supabase:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg", "python3", "yt-dlp", "libreoffice", "supabase-cli"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
publicDir = "dist"
run = ["npx", "serve", "-s", "dist", "-l", "5000"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 43891
externalPort = 3000
