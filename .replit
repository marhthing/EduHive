modules = ["nodejs-20", "web", "postgresql-16"]
run = "npm run dev"

[agent]
expertMode = true
integrations = ["javascript_mem_db:1.0.0", "javascript_supabase:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg", "python3", "yt-dlp", "libreoffice", "supabase-cli"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Development Server"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Development Server"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Development Server"

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
publicDir = "dist"
run = ["npm", "run", "preview"]

[[ports]]
localPort = 5000
externalPort = 80
